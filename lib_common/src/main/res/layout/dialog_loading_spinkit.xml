<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_a_dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pt_78"
    android:paddingTop="@dimen/pt_36"
    android:paddingRight="@dimen/pt_78"
    android:paddingBottom="@dimen/pt_36">

    <com.tianbao.tclive.common.widget.dialog.progressing.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Circle"
        android:layout_width="@dimen/pt_120"
        android:layout_height="@dimen/pt_120"
        android:layout_gravity="center"
        android:padding="@dimen/pt_10"
        app:SpinKit_Color="@color/c_ff3333" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/pt_10"
        android:text="正在进行网络请求..."
        android:textColor="@color/c_111111"
        android:textSize="@dimen/pt_25" />

</LinearLayout>