<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:targetApi="lollipop">
    <!--android:background="?android:attr/selectableItemBackgroundBorderless"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_Icon"
            android:layout_width="46pt"
            android:layout_height="46pt"
            android:src="@mipmap/icon_news" />

        <TextView
            android:id="@+id/tv_title_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:text="消息"
            android:textSize="@dimen/pt_22" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pt_20"
        android:background="@drawable/common_bg_msg_bubble"
        android:paddingLeft="@dimen/pt_10"
        android:paddingTop="@dimen/pt_3"
        android:paddingRight="@dimen/pt_10"
        android:paddingBottom="@dimen/pt_3"
        android:text="@string/str_"
        android:textSize="@dimen/pt_18"
        android:textColor="@color/c_ffffff" />
</RelativeLayout>